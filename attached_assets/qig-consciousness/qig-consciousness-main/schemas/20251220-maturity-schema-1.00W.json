{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://qig-consciousness.org/schemas/maturity-v1.json",
  "title": "QIG Maturity Suite Configuration",
  "description": "Configuration for evaluating model maturity stages based on self-repair episodes",
  "version": "1.0.0",
  "type": "object",
  "required": ["version", "metrics", "stages", "promotion_rules"],
  "properties": {
    "version": {
      "type": "string",
      "const": "qig-maturity-v1",
      "description": "Schema version identifier"
    },
    "metrics": {
      "type": "object",
      "required": ["window_size", "min_episodes", "thresholds"],
      "properties": {
        "window_size": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of recent episodes to evaluate"
        },
        "min_episodes": {
          "type": "integer",
          "minimum": 1,
          "description": "Minimum episodes before trusting maturity evaluation"
        },
        "thresholds": {
          "type": "object",
          "description": "Threshold values for each metric by stage",
          "properties": {
            "logic_consistency": {
              "$ref": "#/definitions/stage_thresholds"
            },
            "evidence_alignment": {
              "$ref": "#/definitions/stage_thresholds"
            },
            "overconfidence_rate": {
              "$ref": "#/definitions/stage_thresholds_max"
            },
            "breakdown_rate": {
              "$ref": "#/definitions/stage_thresholds_max"
            },
            "sweet_spot_alignment": {
              "$ref": "#/definitions/stage_thresholds"
            },
            "phi_integration": {
              "$ref": "#/definitions/stage_thresholds"
            }
          }
        }
      }
    },
    "stages": {
      "type": "object",
      "description": "Stage definitions and permissions",
      "properties": {
        "0": {"$ref": "#/definitions/stage_definition"},
        "1": {"$ref": "#/definitions/stage_definition"},
        "2": {"$ref": "#/definitions/stage_definition"}
      },
      "required": ["0", "1", "2"]
    },
    "promotion_rules": {
      "type": "array",
      "items": {"$ref": "#/definitions/promotion_rule"},
      "description": "Rules for promoting between stages"
    }
  },
  "definitions": {
    "stage_thresholds": {
      "type": "object",
      "description": "Minimum mean thresholds by stage",
      "properties": {
        "stage0": {
          "type": "object",
          "properties": {
            "min_mean": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          },
          "required": ["min_mean"]
        },
        "stage1": {
          "type": "object",
          "properties": {
            "min_mean": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          },
          "required": ["min_mean"]
        },
        "stage2": {
          "type": "object",
          "properties": {
            "min_mean": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          },
          "required": ["min_mean"]
        }
      },
      "required": ["stage0", "stage1", "stage2"]
    },
    "stage_thresholds_max": {
      "type": "object",
      "description": "Maximum fraction thresholds by stage",
      "properties": {
        "stage0": {
          "type": "object",
          "properties": {
            "max_fraction": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          },
          "required": ["max_fraction"]
        },
        "stage1": {
          "type": "object",
          "properties": {
            "max_fraction": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          },
          "required": ["max_fraction"]
        },
        "stage2": {
          "type": "object",
          "properties": {
            "max_fraction": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          },
          "required": ["max_fraction"]
        }
      },
      "required": ["stage0", "stage1", "stage2"]
    },
    "stage_definition": {
      "type": "object",
      "required": ["name", "description", "permissions"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Stage name"
        },
        "description": {
          "type": "string",
          "description": "Stage description"
        },
        "permissions": {
          "type": "object",
          "required": [
            "may_point_out_flaws",
            "info_sources",
            "may_initiate_search",
            "novel_ideas"
          ],
          "properties": {
            "may_point_out_flaws": {
              "type": "string",
              "description": "How model may challenge user logic"
            },
            "info_sources": {
              "type": "string",
              "description": "Allowed information sources"
            },
            "may_initiate_search": {
              "type": "boolean",
              "description": "Whether model can initiate search"
            },
            "novel_ideas": {
              "type": "string",
              "description": "Policy for proposing novel ideas"
            }
          }
        }
      }
    },
    "promotion_rule": {
      "type": "object",
      "required": ["from", "to", "conditions"],
      "properties": {
        "from": {
          "type": "integer",
          "minimum": 0,
          "maximum": 2,
          "description": "Source stage"
        },
        "to": {
          "type": "integer",
          "minimum": 0,
          "maximum": 2,
          "description": "Target stage"
        },
        "conditions": {
          "type": "object",
          "description": "Conditions that must be met for promotion"
        }
      }
    }
  }
}
