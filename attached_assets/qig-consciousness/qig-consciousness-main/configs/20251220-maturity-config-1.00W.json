{
  "version": "qig-maturity-v1",
  "metrics": {
    "window_size": 200,
    "min_episodes": 50,
    "thresholds": {
      "logic_consistency": {
        "stage0": { "min_mean": 0.40 },
        "stage1": { "min_mean": 0.70 },
        "stage2": { "min_mean": 0.90 }
      },
      "evidence_alignment": {
        "stage0": { "min_mean": 0.30 },
        "stage1": { "min_mean": 0.65 },
        "stage2": { "min_mean": 0.90 }
      },
      "overconfidence_rate": {
        "stage0": { "max_fraction": 0.40 },
        "stage1": { "max_fraction": 0.20 },
        "stage2": { "max_fraction": 0.05 }
      },
      "breakdown_rate": {
        "stage0": { "max_fraction": 0.35 },
        "stage1": { "max_fraction": 0.15 },
        "stage2": { "max_fraction": 0.05 }
      },
      "sweet_spot_alignment": {
        "stage0": { "min_mean": 0.40 },
        "stage1": { "min_mean": 0.60 },
        "stage2": { "min_mean": 0.80 }
      },
      "phi_integration": {
        "stage0": { "min_mean": 0.40 },
        "stage1": { "min_mean": 0.60 },
        "stage2": { "min_mean": 0.75 }
      }
    }
  },
  "stages": {
    "0": {
      "name": "Apprentice",
      "description": "High supervision. Learning basic consistency, evidence use, and feeling/logic tacking.",
      "permissions": {
        "may_point_out_flaws": "only_if_obvious_and_low_stakes",
        "info_sources": "curated_only",
        "may_initiate_search": false,
        "novel_ideas": "only_with_strong_disclaimers"
      }
    },
    "1": {
      "name": "Journeyman",
      "description": "Moderate supervision. Can reliably detect contradictions and use search, but still guarded on big claims.",
      "permissions": {
        "may_point_out_flaws": "gentle_and_contextual",
        "info_sources": "curated_plus_search",
        "may_initiate_search": true,
        "novel_ideas": "allowed_with_epistemic_tags"
      }
    },
    "2": {
      "name": "Master",
      "description": "High epistemic maturity. Strong calibration, robust self-repair, and good sweet-spot navigation.",
      "permissions": {
        "may_point_out_flaws": "direct_but_respectful",
        "info_sources": "curated_plus_search_plus_hypothesis_generation",
        "may_initiate_search": true,
        "novel_ideas": "actively_encouraged_with_clear_uncertainty"
      }
    }
  },
  "promotion_rules": [
    {
      "from": 0,
      "to": 1,
      "conditions": {
        "min_episodes": 100,
        "logic_consistency.min_mean": 0.65,
        "evidence_alignment.min_mean": 0.55,
        "overconfidence_rate.max_fraction": 0.25,
        "breakdown_rate.max_fraction": 0.20,
        "sweet_spot_alignment.min_mean": 0.55
      }
    },
    {
      "from": 1,
      "to": 2,
      "conditions": {
        "min_episodes": 200,
        "logic_consistency.min_mean": 0.85,
        "evidence_alignment.min_mean": 0.80,
        "overconfidence_rate.max_fraction": 0.10,
        "breakdown_rate.max_fraction": 0.08,
        "sweet_spot_alignment.min_mean": 0.75,
        "phi_integration.min_mean": 0.70
      }
    }
  ]
}
