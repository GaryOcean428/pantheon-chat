#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# SQL Schema Naming Validation
echo "ðŸ” Validating SQL schema naming conventions..."

# Get list of staged SQL files
STAGED_SQL_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(sql)$' || true)

if [ -n "$STAGED_SQL_FILES" ]; then
  echo "Found SQL files to validate:"
  echo "$STAGED_SQL_FILES" | sed 's/^/  - /'
  
  # Run validation
  if python3 scripts/validate-sql-naming.py $STAGED_SQL_FILES; then
    echo "âœ… SQL naming conventions validated"
  else
    echo "âŒ SQL naming validation failed"
    echo ""
    echo "Fix the naming violations or update COMMON_PLURALS in scripts/validate-sql-naming.py"
    exit 1
  fi
else
  echo "No SQL files to validate"
fi

# Run existing pre-commit checks
npm run lint-staged 2>/dev/null || true
