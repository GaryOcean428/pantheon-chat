# Pantheon-Chat Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# Database (Required - PostgreSQL with pgvector)
DATABASE_URL=postgresql://user:pass@localhost:5432/pantheon

# Redis Cache (Optional - improves performance)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# Ocean Agent Configuration
MAX_ITERATIONS=1000

# UI Configuration
VITE_BTC_USD_RATE=50000

# External APIs
# Tavily API for Zeus Chat web search (optional)
# Get your key at https://tavily.com
TAVILY_API_KEY=your-tavily-api-key-here

# Python Backend
PYTHON_BACKEND_URL=http://localhost:5001

# Security (for production)
# SESSION_SECRET=your-session-secret-here
# ENABLE_HTTPS=true

# Federation Configuration
FEDERATION_MODE=standalone  # standalone, central, or edge
CENTRAL_NODE_URL=           # wss://central.example.com:8765 (for edge nodes)
SYNC_INTERVAL=60            # seconds between sync

# GPU Backend (RunPod Serverless)
RUNPOD_API_KEY=             # Get from runpod.io
RUNPOD_ENDPOINT_ID=         # Your serverless endpoint ID
GPU_BACKEND_URL=            # https://api.runpod.ai/v2/{endpoint_id}

# Constellation Configuration
CONSTELLATION_SIZE=12       # 3=minimal, 12=standard, 48=large, 240=full E8
CONSTELLATION_ROLES=vocab,strategy,perception,memory,action,heart
