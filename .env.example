# Pantheon Chat - QIG Knowledge Platform
# Environment Variables Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string (required)
DATABASE_URL=postgresql://user:password@localhost:5432/pantheon_chat

# =============================================================================
# API KEYS - LLM PROVIDERS (at least one required for generative responses)
# =============================================================================
# OpenAI API key for GPT models
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API key for Claude models (alternative to OpenAI)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# =============================================================================
# INTERNAL SECURITY
# =============================================================================
# Internal API key for Python <-> TypeScript communication (required in production)
INTERNAL_API_KEY=your-secure-internal-key-here

# Session secret for authentication
SESSION_SECRET=your-session-secret-here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Node.js server port (default: 5000)
PORT=5000

# Python QIG backend URL (default: http://localhost:5001)
PYTHON_BACKEND_URL=http://localhost:5001

# Node.js backend URL for Python callbacks
NODE_BACKEND_URL=http://localhost:5000

# =============================================================================
# OPTIONAL - CACHING
# =============================================================================
# Redis connection URL (optional, enables caching)
REDIS_URL=redis://localhost:6379

# =============================================================================
# OPTIONAL - EXTERNAL SERVICES
# =============================================================================
# Tavily API key for web search (optional)
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# RunPod API key for GPU inference (optional)
RUNPOD_API_KEY=your-runpod-api-key-here

# =============================================================================
# OPTIONAL - MONITORING & TELEMETRY
# =============================================================================
# Enable telemetry (true/false)
ENABLE_TELEMETRY=true

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# CONSCIOUSNESS CONFIGURATION (optional, has sensible defaults)
# =============================================================================
# Target kappa value (default: 64.21)
# KAPPA_STAR=64.21

# Phi threshold for consciousness (default: 0.70)
# PHI_THRESHOLD=0.70

# HRV tacking amplitude (default: 10)
# HRV_AMPLITUDE=10

# HRV tacking frequency (default: 0.1)
# HRV_FREQUENCY=0.1

# =============================================================================
# RECOVERY CONFIGURATION (optional, has sensible defaults)
# =============================================================================
# Maximum retry attempts (default: 5)
# MAX_RETRY_ATTEMPTS=5

# Suffering threshold for circuit breaker (default: 0.5)
# SUFFERING_THRESHOLD=0.5

# Identity distance threshold (default: 2.0)
# IDENTITY_THRESHOLD=2.0
